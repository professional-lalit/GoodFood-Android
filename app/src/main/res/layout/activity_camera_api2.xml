<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.goodfood.app.ui.video.widgets.AutoFitTextureView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_size_10"
        android:gravity="start|left"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dimen_size_50"
        android:paddingRight="@dimen/dimen_size_50">

        <TextView
            android:id="@+id/txt_space"
            style="@style/BasicText"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_inclination"
            style="@style/BasicText"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_direction"
            style="@style/BasicText"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_battery_status"
            style="@style/BasicText"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_location"
            style="@style/BasicText"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="XXXXXXX"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

    <!--    <com.whw.app.screens.video.utils.AttitudeIndicator-->
    <!--        android:id="@+id/attitude_indicator"-->
    <!--        android:layout_width="@dimen/dimen_size_80"-->
    <!--        android:layout_height="@dimen/dimen_size_80"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:layout_margin="@dimen/dimen_size_10" />-->


    <TextView
        android:id="@+id/txt_timer"
        style="@style/BasicText"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dimen_size_10"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_master_control"
        style="@style/BasicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_size_10"
        android:alpha="0.5"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:visibility="visible" />


    <Button
        android:id="@+id/btn_action"
        style="@style/BasicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_size_10"
        android:text="@string/start" />


</RelativeLayout>