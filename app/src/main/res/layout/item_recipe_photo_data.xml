<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.goodfood.app.models.domain.RecipePhoto" />

        <variable
            name="clickListener"
            type="com.goodfood.app.interfaces.IClickListener" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_size_5">

        <ImageView
            android:id="@+id/img_recipe_photo"
            android:layout_width="@dimen/dimen_size_120"
            android:layout_height="@dimen/dimen_size_120"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:onClick="@{(view) -> clickListener.onClick(view, data)}"
            android:scaleType="centerCrop"
            app:loadImageFile="@{data.imgUri.toString()}"
            tools:src="@drawable/ic_profile_placeholder" />

        <ImageView
            android:id="@+id/img_delete"
            android:onClick="@{(view) -> clickListener.onClick(view, data)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dimen_size_5"
            android:src="@drawable/ic_close" />
    </RelativeLayout>

</layout>