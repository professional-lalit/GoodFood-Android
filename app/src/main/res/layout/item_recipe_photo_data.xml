<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.goodfood.app.models.domain.RecipePhoto" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dimen_size_50"
        android:layout_height="@dimen/dimen_size_50">

        <ImageView
            app:setActionItemIcon="@{data}"
            android:id="@+id/img_recipe_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_camera" />

    </RelativeLayout>

</layout>